extends layout.pug

block content
	h1=title 
	h3.alert-warning=message
	if name
		p.error your input data were: - FlightID:#{flight_id} , Job Title:#{jtitle}, Hour_rate:#{hour}
	form(method="POST" action="/new_customer")
		if error
			p.text-danger Something goes wrong!!
		label(for="inputText") CustomerID
			input(type='text' name='customer_id' id='customer_id' placeholder='CustomerID' required autofocus)
			label(for="inputText") FirstName
			input(type="text" name="first_name" id="first_name" placeholder="FirstName" required autofocus)
			label(for="inputText") LastName
			input(type="text" name="last_name" id="last_name" placeholder="LastName" required autofocus)
			label(for="inputText") BillingAddress
			input(type="text" name="billing_address" id="billing_address" placeholder="BillingAddress" required autofocus)
			label(for="inputText") Email
			input(type="text" name="email" id="email" placeholder="Email" required autofocus)
		button(type="submit") Submit
